<h2 align ="center">Title : <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<div class="grav-article-view">
		<small>Created By:</small>
		<%= link_to gravatar_for(@article.user,size:40), user_path(@article.user) %>
	</div>
	<h4 class="center description" ><strong>Description:</strong></h4>
	<hr>
	 <%= simple_format(@article.description) %>
	
	<div class="article-actions">
		<%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
		 <% if logged_in? && current_user == article.user %>
		         <%= link_to "Edit the article", edit_article_path(@article),class: "btn btn-xs btn-primary" %>	
		         <%= link_to "Delete this article", article_path(@article),method: :delete,
						data: { confirm: "Are you sure you want to delete this article?"} ,
						 class: "btn btn-xs btn-danger" %>	
		<% end %>
		<div class="article-meta-detail">
					<small>Created By: <%= @article.user.username if @article.user %>
						<%= time_ago_in_words(@article.created_at)%> ago,
						Updated at: <%= time_ago_in_words(@article.updated_at)%> ago
					</small>
		</div>
	</div>
	





